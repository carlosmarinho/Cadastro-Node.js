<form action="/user/password/<%=req.param('id') %>" method="POST" class="form-signin">
      <h2 class="form-signin-heading"> Altera Senha </h2>
      <br />
      <div class="control-group">
            <div class="control-group">
            <input type="password" class="form-control" placeholder="Nova Senha" name="password">
            </div>
            <div class="control-group">
            <input type="password" class="form-control" placeholder="Confirme a Senha" name="confirm-password">
            </div>
            
            <br/>
            <input type="submit"  class="btn btn-lg btn-primary btn-block" value="Alterar Senha"/>
      </div>
            
</form>